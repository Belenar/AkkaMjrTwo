<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Dice game</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Dice Game</a>
            </div>
        </div>
    </nav>

    <div class="container" ng-app="dice-game">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <hr />
                    <p>Full source code available on <a href="https://github.com/ChristofLauriers/AkkaMjrTwo">GitHub</a></p>
                    <p>More details available on <a href="http://blog.scalac.io/">Scala implementation docs</a></p>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/angular.min.js" type="text/javascript"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js" type="text/javascript"></script>
    <script src="~/js/site.js" type="text/javascript"></script>
    <script src="~/js/controllers/create_game_controller.js" type="text/javascript"></script>
    <script src="~/js/controllers/start_game_controller.js" type="text/javascript"></script>
    <script src="~/js/controllers/game_controller.js" type="text/javascript"></script>
    <script src="~/js/services/event_service.js" type="text/javascript"></script>
    <script src="~/js/services/command_service.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
